<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AboutUs">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="-57dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="96dp"
                android:layout_height="91dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/logo" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Cinema Critique!"
                android:textColor="#5B2AE3"
                android:textSize="35dp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/imageView4"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="416dp"
                android:layout_height="230dp"
                android:layout_marginTop="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView5"
                app:srcCompat="@drawable/upcoming_movies_march_2021" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="About Us"
                android:textColor="#5B2AE3"
                android:textSize="43dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView2" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cinema Critique is an app made for my university Mobile Systems module based on a website I designed for my Web Development Course at Bucks New Uni, currently I am working on the website alone as the programmer developer and designer. The website was created to give users a platform to view Cinema Critiques reviews on popular movies aswell as reviews from other popular sites such as imdb, aswell as posting trailers of the films to give our audience an all in one website to make our audiences movie finding experience much easier. Whether they are looking for their first movie to watch or their thousandth, be they young or old, Cinema Critique is for all movie goers.Cinema Critique is a website I am designing for my Web Development Course at Bucks New Uni, currently I am working on the website alone as the programmer developer and designer. The website was created to give users a platform to view Cinema Critiques reviews on popular movies aswell as reviews from other popular sites such as imdb, aswell as posting trailers of the films to give our audience an all in one website to make our audiences movie finding experience much easier. Whether they are looking for their first movie to watch or their thousandth, be they young or old, Cinema Critique is for all movie goers.Cinema Critique is a website I am designing for my Web Development Course at Bucks New Uni, currently I am working on the website alone as the programmer developer and designer. The website was created to give users a platform to view Cinema Critiques reviews on popular movies aswell as reviews from other popular sites such as imdb, aswell as posting trailers of the films to give our audience an all in one website to make our audiences movie finding experience much easier. Whether they are looking for their first movie to watch or their thousandth, be they young or old, Cinema Critique is for all movie goers."
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView6" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Staff Information"
                android:textSize="25dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView7" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Staff Information \nCEO - Shamial Rashid 21905385 "
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.497"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView12" />

            <Button
                android:id="@+id/button3"
                android:layout_width="320dp"
                android:layout_height="41dp"
                android:onClick="open"
                android:text="Contact Us"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView13" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>